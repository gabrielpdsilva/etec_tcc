<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoCinza">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPersonagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/cardViewCinza">

            <androidx.cardview.widget.CardView
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardViewCinza">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

            <!--Imagem do personagem-->
            <ImageView
                android:id="@+id/criar_personagem_imv_imagem"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:background="@color/colorPrimary"/>

            <!--Campo nome-->
            <TextView
                android:id="@+id/criar_personagem_textview_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtNomePersonagem"
                android:layout_toRightOf="@+id/criar_personagem_imv_imagem"
                style="@style/TextViewTitulos"/>

            <EditText
                android:id="@+id/criar_personagem_edt_nickname"
                android:singleLine="true"
                android:maxLength="15"
                android:layout_toRightOf="@id/criar_personagem_textview_nome"
                android:layout_width="match_parent"
                android:textColor="@color/textosEditText"
                android:layout_height="40dp" />

                <!--Campo Classe-->
            <TextView
            android:id="@+id/criar_personagem_textview_classe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtClassePersonagem"
            android:layout_toRightOf="@+id/criar_personagem_imv_imagem"
            style="@style/TextViewTitulos"
            android:layout_below="@id/criar_personagem_textview_nome"/>

            <EditText
                android:id="@+id/criar_personagem_edt_classe"
                android:singleLine="true"
                android:maxLength="15"
                android:layout_toRightOf="@id/criar_personagem_textview_classe"
                android:textColor="@color/textosEditText"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

                <!--Campo Sexo-->
            <TextView
                android:id="@+id/criar_personagem_textview_sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtSexoPersonagem"
                android:layout_toRightOf="@+id/criar_personagem_imv_imagem"
                android:layout_below="@id/criar_personagem_textview_classe"
                style="@style/TextViewTitulos"/>

            <EditText
                android:id="@+id/criar_personagem_edt_genero"
                android:singleLine="true"
                android:maxLength="15"
                android:textColor="@color/textosEditText"
                android:layout_toRightOf="@+id/criar_personagem_textview_sexo"
                android:layout_below="@id/criar_personagem_textview_classe"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--LinearLayout pra colocar as habilidades, descrição e história-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="138dp">

                <!--Campo Habilidades-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    style="@style/TextViewTitulos"
                    android:textAlignment="center"
                    android:text="@string/txtHabilidadesPersonagem"/>

                <EditText
                    android:id="@+id/criar_personagem_edt_habilidades"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/branco"
                    android:gravity="top|left"
                    android:background="@color/caixasDeTexto"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:maxLength="200"/>

                    <!--Campo Descrição:-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="center"
                    android:text="@string/txtDescricaoPersonagem"
                    style="@style/TextViewTitulos"
                    android:textColor="#ffffff"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#000000"/>

                    <!--EditText da descrição-->
                <EditText
                    android:id="@+id/criar_personagem_edt_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/branco"
                    android:gravity="top|left"
                    android:background="@color/caixasDeTexto"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:maxLength="200"/>

                    <!--Campo História do personagem:-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:background="#000000"
                    android:text="@string/txtHistoriaPersonagem"
                    android:textColor="#ffffff"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    style="@style/TextViewTitulos"/>

                    <!--EditText da hist. personagem-->
                <EditText
                    android:id="@+id/criar_personagem_edt_historia"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="top|left"
                    android:textColor="@color/branco"
                    android:background="@color/caixasDeTexto"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:maxLength="200"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Botão Criar-->
        <Button
            android:id="@+id/criar_personagem_btn_criar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/btnCriar"
            android:layout_below="@+id/cvPersonagem"
            style="@style/BotaoEstilo"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</ScrollView>