<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoCinza"
    tools:context=".fragments.SolicitacoesFragment">

    <ProgressBar
        android:id="@+id/pbSolicitacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/txtYouHaveNoPendentSolicitations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/voce_nao_tem_solicitacoes"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:textSize="25dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSolicitacoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>