<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#cc5ccc">

    <!--ImageView do amigo-->
    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:background="#c54342"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--TextView Nickname do amigo-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname do amigo"
            style="@style/TextViewHomeBoldTitulo"/>

        <!--TextView Nome do amigo-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do amigo"
            style="@style/TextViewHomeBold"/>

    </LinearLayout>

</LinearLayout>