<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_campos_display_key"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/list_item_campos_display_double_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_campos_display_key"
        android:text=" : "/>

    <TextView
        android:id="@+id/list_item_campos_display_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_toRightOf="@+id/list_item_campos_display_double_dot"/>

</RelativeLayout>