<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        style="@style/EditTextCadastro"
        android:id="@+id/list_item_campos_key"
        android:hint="@string/txtCampoPersonagem"
        android:layout_width="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="30"/>

    <TextView
        android:id="@+id/list_item_campos_double_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=" : "
        android:typeface="sans"
        style="@style/TextViewComumBold"
        android:textAlignment="center"
        android:layout_toRightOf="@id/list_item_campos_key"/>

    <EditText
        style="@style/EditTextCadastro"
        android:id="@+id/list_item_campos_value"
        android:hint="@string/txtValorPersonagem"
        android:layout_marginRight="10dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_campos_double_dots"
        android:maxLength="150"/>

</RelativeLayout>