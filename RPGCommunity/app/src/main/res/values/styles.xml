<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!--Config original:
       <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>-->

        <!--Cores anteriormente usadas:
        #6042ad (roxo primário)
        #4b338a (roxo primário escuro)
        -->

        <!--Dia-->
       <item name="colorPrimary">#bf2a45</item>
        <item name="colorPrimaryDark">#591c44</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="corBackground">#fcfcfc</item>
        <item name="corCardBackground">#ffffff</item>
        <item name="corTexto">#212121</item>
        <item name="corTint">#ffffff</item>
        <item name="corBotao">#bf2a45</item>

    </style>

        <!--Noite-->
    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#bf2a45</item>
        <item name="colorPrimaryDark">#591c44</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="corBackground">#303030</item>
        <item name="corCardBackground">#424242</item>
        <item name="corTexto">#ffffff</item>
        <item name="corTint">#ffffff</item>
        <item name="corBotao">#bf2a45</item>


    </style>

    <!--Animação que faz transição de temas entre Activities
    Detalhe: pra funcionar, adicione o seguinte código em abos os styles dia e noite:
    <item name="android:windowAnimationStyle">@style/TransicaoTemaActivity</item>
    -->
    <!--
    <style name="TransicaoTemaActivity">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Estilo pra criar a linha que separa conteúdo-->
    <style name="Linha">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!--Estilo pra TextView Comum-->
    <style name="TextViewComum">
        <item name="android:textSize">18dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">#ededed</item>

    </style>

    <!--Estilo pra TextView Comum em negrito-->
    <style name="TextViewComumBold">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">#ededed</item>
    </style>

    <!--Estilo pra criar TextView maiores, de títulos-->
    <style name="TextViewTitulos">
        <item name="android:textSize">23dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ededed</item>
    </style>

    <!--Estilo pra criar EditText do cadastro-->
    <style name="EditTextCadastro">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ededed</item>
    </style>

    <!--Activities sem toolbar-->
    <style name="AppThemeNo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Estilo do botão-->
    <style name="BotaoEstilo">
        <item name="android:background">@drawable/modelo_botao</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--=======Estilo de textos das sessões na Home=======-->

    <!--Estilo do título da Home-->
    <style name="TextViewHomeBoldTitulo">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ededed</item>
    </style>

    <!--Estilo dos subtítulos da Home-->
    <style name="TextViewHomeBold">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ededed</item>
    </style>

    <!--Estilo do texto da descrição da Home-->
    <style name="TextViewHomeDescricao">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ededed</item>
    </style>

    <!--Estilo dos outros detalhes da Home-->
    <style name="TextViewHomeDetalhes">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ededed</item>
    </style>

</resources>
